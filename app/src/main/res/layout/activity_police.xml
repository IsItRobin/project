    <TextView
        android:id="@+id/textView6"
        android:layout_width="300dp"
        android:layout_height="38dp"
        android:fontFamily="sans-serif-medium"
        android:text="Your Problem/Location"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.144"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.226" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="63dp"
        android:layout_height="47dp"
        android:fontFamily="sans-serif-medium"
        android:text="Type"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39" />

    <Button
        android:id="@+id/fever_button"
        android:layout_width="105dp"
        android:layout_height="45dp"
        android:background="@drawable/curve2"
        android:backgroundTint="@color/white"
        android:gravity="center|end"
        android:text="FIR"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.448" />

    <Button
        android:id="@+id/nonfever_button"
        android:layout_width="141dp"
        android:layout_height="45dp"
        android:background="@drawable/curve2"
        android:backgroundTint="@color/white"
        android:gravity="center|end"
        android:text="Cyber Crime"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.748"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.447" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="307dp"
        android:layout_height="75dp"
        android:backgroundTint="#888787"
        android:textColor="@color/white"

        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.907" />

    <Button
        android:id="@+id/Done"
        android:layout_width="307dp"
        android:layout_height="75dp"
        android:backgroundTint="#000000"
        android:text="Done"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.757" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="25dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/nonfever_button"
        app:layout_constraintEnd_toEndOf="@+id/nonfever_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/nonfever_button"
        app:layout_constraintTop_toTopOf="@+id/nonfever_button"
        app:layout_constraintVertical_bias="0.533"
        app:srcCompat="@drawable/fire" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="55dp"
        android:layout_height="29dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/fever_button"
        app:layout_constraintEnd_toEndOf="@+id/fever_button"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="@+id/fever_button"
        app:layout_constraintTop_toTopOf="@+id/fever_button"
        app:layout_constraintVertical_bias="0.333"
        app:srcCompat="@drawable/eyes" />


</androidx.constraintlayout.widget.ConstraintLayout>